  <div class="release-list" style="margin-top: 40px;">
    {% for product in collections['releases'].products %}
      <div class="release-item" data-images="{% for image in product.images %}{{ image | img_url: '700x' }}{% unless forloop.last %},{% endunless %}{% endfor %}">
        <div class="release-info">
          <h3>{{ product.title }}</h3>
          {% assign listen_url = product.metafields.custom.listen_url.value %}
          {% unless listen_url %}
            {% if product.media.size > 0 %}
              {% assign listen_url = product.media[0] | media_url %}
            {% else %}
              {% assign listen_url = product.url %}
            {% endif %}
          {% endunless %}
          <a href="{{ listen_url }}" class="listen-now-btn" target="_blank">Listen Now</a>
        </div>
        <div class="release-image">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '700x' }}" alt="{{ product.title }}" />
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.release-item').forEach(function (item) {
      var imgs = item.dataset.images ? item.dataset.images.split(',') : [];
      var imgTag = item.querySelector('img');
      var idx = 0;
      item.addEventListener('mouseenter', function () {
        if (imgs.length > 1) {
          item.swapInterval = setInterval(function () {
            idx = (idx + 1) % imgs.length;
            if (imgTag) imgTag.src = imgs[idx];
          }, 1000);
        }
      });
      item.addEventListener('mouseleave', function () {
        if (item.swapInterval) clearInterval(item.swapInterval);
        if (imgTag && imgs.length) imgTag.src = imgs[0];
      });
    });
  });
</script>


